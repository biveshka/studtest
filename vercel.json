{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "simple.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/simple",
      "dest": "/simple.html"
    },
    {
      "src": "/simple.css",
      "dest": "/simple.css"
    },
    {
      "src": "/simple.js",
      "dest": "/simple.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}